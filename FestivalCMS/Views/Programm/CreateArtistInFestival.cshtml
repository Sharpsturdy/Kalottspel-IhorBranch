@model FestivalCMS.Models.ArtistModel

@{
    ViewBag.Title = "CreateArtistInFestival";
    Layout = "~/Views/Shared/FestivalCMSLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-8">
            @Html.ActionLink("Back", "GetArtistsInFestival", "Programm", new { fID = Model.Festival.ID })
        </div>
        <div class="col-lg-12">
            <h1 class="page-header">@Model.Festival.Name</h1>
            <h1 class="page-header">New Artist</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-8">
            <form method="post" action="@Url.Action("CreateArtistInFestival")" enctype="multipart/form-data" class="formwithcontent">
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.Artist.Name, new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Artist.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Artist.Name, null, new { @class = "alert-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Artist.ExtLink, new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Artist.ExtLink, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Artist.ExtLink, null, new { @class = "alert-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Artist.Description, new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.Artist.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Artist.Description, null, new { @class = "alert-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Artist.MediaTypeID, new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(m => m.Artist.MediaTypeID, Model.MediaTypes, new { @class = "form-control", id = "mediaselector" })
                            @Html.ValidationMessageFor(model => model.Artist.MediaTypeID, null, new { @class = "alert-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                        @Html.HiddenFor(m=>m.Festival.ID)
                    </div>
                    @Html.Partial("AddingMedia")
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    InitiateCreatingContent();
</script>